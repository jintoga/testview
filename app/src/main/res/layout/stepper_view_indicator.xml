<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/stage1TextNumber"
                android:layout_width="@dimen/stepper_indicator_icon_size"
                android:layout_height="@dimen/stepper_indicator_icon_size"
                android:layout_gravity="center"
                android:background="@drawable/bg_circular_enabled"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/stepper_indicator_check_icon_text_size"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/stage1Icon"
                android:layout_width="@dimen/stepper_indicator_icon_size"
                android:layout_height="@dimen/stepper_indicator_icon_size"
                android:layout_gravity="center"
                android:background="@drawable/bg_circular_enabled"
                android:gravity="center"
                android:padding="@dimen/stepper_indicator_check_icon_padding"
                android:src="@drawable/ic_check"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/stage1Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:maxLines="2"
                android:text="Встатьте карту"
                android:textColor="@color/black"
                android:textSize="@dimen/stepper_indicator_text_size" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/stepper_indicator_divider_width"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@color/md_grey_500" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/stage2TextNumber"
                android:layout_width="@dimen/stepper_indicator_icon_size"
                android:layout_height="@dimen/stepper_indicator_icon_size"
                android:layout_gravity="center"
                android:background="@drawable/bg_circular_enabled"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="@dimen/stepper_indicator_check_icon_text_size"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/stage2Icon"
                android:layout_width="@dimen/stepper_indicator_icon_size"
                android:layout_height="@dimen/stepper_indicator_icon_size"
                android:layout_gravity="center"
                android:background="@drawable/bg_circular_enabled"
                android:gravity="center"
                android:padding="@dimen/stepper_indicator_check_icon_padding"
                android:src="@drawable/ic_check"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/stage2Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:text="Обработка платежа"
                android:textColor="@color/black"
                android:textSize="@dimen/stepper_indicator_text_size" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/stepper_indicator_divider_width"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@color/md_grey_500" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/stage3TextNumber"
                android:layout_width="@dimen/stepper_indicator_icon_size"
                android:layout_height="@dimen/stepper_indicator_icon_size"
                android:layout_gravity="center"
                android:background="@drawable/bg_circular_enabled"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="@dimen/stepper_indicator_check_icon_text_size"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/stage3Icon"
                android:layout_width="@dimen/stepper_indicator_icon_size"
                android:layout_height="@dimen/stepper_indicator_icon_size"
                android:layout_gravity="center"
                android:background="@drawable/bg_circular_enabled"
                android:gravity="center"
                android:padding="@dimen/stepper_indicator_check_icon_padding"
                android:src="@drawable/ic_check"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/stage3Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:text="Печать чека"
                android:textColor="@color/black"
                android:textSize="@dimen/stepper_indicator_text_size" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
