<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="5dp"
                android:color="@color/colorStepperViewSuccessTransparent_35" />
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="1080">
            <shape
                android:innerRadius="@dimen/stepper_view_content_progress_bar_inner_radius"
                android:shape="ring"
                android:thickness="5dp"
                android:useLevel="true"><!-- this line fixes the issue for lollipop api 21 -->
                <gradient
                    android:centerColor="@color/colorStepperViewSuccessTransparent_35"
                    android:endColor="@color/colorStepperViewSuccessTransparent_35"
                    android:startColor="@color/colorStepperViewSuccess"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>
</layer-list>