<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="@color/shadow_color_75"
                android:endColor="@color/shadow_color_75"
                android:startColor="@color/shadow_color_75"
                android:type="linear" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item
        android:bottom="0dp"
        android:gravity="bottom"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/hole_color" />

            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>